<div class="jumbotron">
  <h1 class="display-4"><%= @friend.first_name + " " + @friend.last_name %></h1>
  <p class="lead">
    <h3>Email</h3> <%= @friend.email%> 
    <h3>Phone</h3> <%= @friend.phone%> 
    <h3>Twitter</h3> <%= @friend.twitter%> 
  </p>
  <hr class="my-4">
    <div>
      <%= link_to "Edit", edit_friend_path(@friend), class:"btn btn-secondary" %>
      <%= link_to "Back to friends", friends_path, class:"btn btn-secondary" %>
    </div>
  </p>
</div>

